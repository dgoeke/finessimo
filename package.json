{
  "name": "finessimo",
  "version": "0.1.0",
  "description": "Tetris Finesse Trainer - Learn optimal piece placement techniques",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "CI=true jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage:snapshot": "npm run test:coverage && node scripts/update-coverage-thresholds.cjs",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write --log-level warn ./src/ ./tests/",
    "format:check": "prettier --check .",
    "ci": "npm-run-all -s clean typecheck lint:fix test format",
    "pre-commit": "npm-run-all -s clean typecheck lint:fix test:coverage format",
    "assistants:build": "node scripts/build-assistants.cjs",
    "assistants:validate": "node scripts/validate-assistants.cjs",
    "assistants:pre-commit": "npm-run-all assistants:validate assistants:build && git diff --exit-code -- CLAUDE.md AGENTS.md || (echo '📝 Run assistants:build and commit outputs' && exit 1)",
    "generate:finesse-table": "jest --runInBand tests/scripts/generate-guided-finesse-table.test.ts",
    "prepare": "husky"
  },
  "keywords": [
    "tetris",
    "finesse",
    "training",
    "game",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@chnicoloso/lit-jsx": "^0.0.2",
    "@lit-labs/signals": "^0.1.3",
    "lit": "^3.3.1",
    "robot3": "^1.1.1",
    "ts-fsrs": "^5.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.34.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3"
  }
}
