{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Make the requirement explicit for tests:
    "strictNullChecks": true,
    // Jest globals/types:
    "types": [
      "jest",
      "jest-environment-jsdom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
